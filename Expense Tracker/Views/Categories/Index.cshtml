@model IEnumerable<Expense_Tracker.Models.Category>

@{
    ViewData["Title"] = "Index";
}


<div class="row" >
    <div class="col-md-7">
        <ejs-grid id="Grid" dataSource="@Model" allowPaging="true" allowSorting="true">
            <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column field="IconTitle" headerText="Category"></e-grid-column>
                <e-grid-column field="Type" template="#typeColumnTemplate" width="150px" align="left"></e-grid-column>
                <e-grid-column field="" headerText="Actions" template="#actionColumnTemplate" width="100px"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>
    <div class="col-md-5">
        <div class="widget d-flex h-100 justify-content-center align-items-center" style="background-color:#212b36">
            <i class="fa-solid fa-shapes fa-2xl"></i>
        </div>
    </div>
</div>

<script id="typeColumnTemplate" type="text/x-template">
    ${if (Type=="Income")}
    <span class="badge bg-success">${Type}</span>
    ${else}
    <span class="badge bg-danger">${Type}</span>
    ${/if}
</script>

<script id="actionColumnTemplate" type="text/x-template">
    <div class="d-flex flex-row justify-content-start">
        <a class="btn btn-sm" href="Categories/AddOrEdit/${CategoryId}"><i class="fa-solid fa-pen text-light"></i></a>
        <a class="btn btn-sm" href="Categories/Delete/${CategoryId}"><i class="fa-solid fa-trash text-light"></i></a>
    <div>
</script>
